<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/currency_flag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        tools:src="@drawable/aud"
        android:contentDescription="@string/currency_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_model_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/currency_flag"
        app:layout_constraintStart_toEndOf="@id/currency_flag"
        app:layout_constraintTop_toTopOf="@id/currency_flag"
        app:layout_constraintEnd_toStartOf="@id/currency_value_conversion"
        tools:text="GBP" />

    <EditText
        android:id="@+id/currency_value_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        android:hint="@string/enter_value"
        app:layout_constraintBottom_toBottomOf="@id/currency_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/currency_flag"
        android:inputType="numberDecimal" />

</androidx.constraintlayout.widget.ConstraintLayout>